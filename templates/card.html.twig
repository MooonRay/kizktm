{% extends 'base.html.twig' %}

{% block body %}

<!--1. Мороженое -->

    <section class="section columns has-background-white-bis">
        <aside class="column is-2-fullhd is-1-widescreen is-0-tablet has-background-white-bis"></aside>
        <div class="column is-8-fullhd is-10-widescreen is-11-tablet  has-background-white-bis">
            <div class="container">
                <p class="title is-2 has-text-centered">Пломбир ванильный в вафельном стаканчике</p>
            </div>
        </div>
        <aside class="column is-2-fullhd is-1-widescreen is-0-tablet has-background-white-bis"></aside>
    </section>

<!-- 2. Тайлы --->
    <section class="columns has-background-white-bis">
        <aside class="column is-2-fullhd is-1-widescreen is-0-tablet has-background-white-bis"></aside>
        <div class="column is-8-fullhd is-10-widescreen is-11-tablet has-background-white-bis">
            <div class="tile is-ancestor">
                <div class="tile">
                    <div class="tile is-parent is-6">
                        <article class="tile is-child box has-background-white-bis has-shadow ">
                            <img src="/images/640/16.png">
                        </article>
                    </div>
                    <div class="tile is-parent is-6">
                        <article class="tile is-child box has-background-white-bis has-shadow ">
                            <p class="title">Состав продукта</p>
                            <div class="content">
                            <ul class="sostav">
                                <li>сливки</li>
                                <li>молоко цельное сгущенное с сахаром</li>
                                <li>молоко концентрированное обезжиренное</li>
                                <li>сахар</li>
                                <li>вафельный стаканчик:</li>
                                <ul>
                                    <li>мука пшеничная хлебопекарная</li>
                                    <li>масло растительное подсолнечное</li>
                                    <li>сахар</li>
                                    <li>соль поваренная пищевая</li>
                                    <li>разрыхлитель: гидрокарбонат натрия (сода пищевая)</li>
                                </ul>
                                <li>смесь пищевых эмульгаторов и стабилизаторов:</li>
                                <ul>
                                    <li>эмульгатор: моно- и диглицериды жирных кислот</li>
                                    <li>стабилизаторы:</li>
                                    <ul>
                                        <li>камедь рожкового дерева</li>
                                        <li>гуаровая камедь</li>
                                        <li>каррагинан</li>
                                    </ul>
                                </ul>
                                <li>ароматизатор: ванилин</li>
                                </ul>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </div>
        <aside class="column is-2-fullhd is-1-widescreen has-background-white-bis"></aside>
    </section>

    <section class="columns has-background-white-bis">
        <aside class="column is-2-fullhd is-1-widescreen is-0-tablet has-background-white-bis"></aside>
        <div class="column is-8-fullhd is-10-widescreen is-11-tablet has-background-white-bis">
            <div class="tile is-ancestor">
                <div class="tile">
                    <div class="tile is-parent is-7">
                        <article class="tile is-child box has-background-white-bis has-shadow ">
                            <table class="table is-striped">
                                <tbody>
                                    <thead>
                                        <tr>
                                            <th class="sku-parameters-strong">Основные параметры</th>
                                            <th class="sku-parameters-strong"></th>
                                        </tr>
                                    </thead>
                                    <tr class="sku-parameters">
                                        <td>Масса продукта (г):</td>
                                        <td>100</td>
                                    </tr>
                                    <tr class="sku-parameters">
                                        <td>Упаковка:</td>
                                        <td>флоупак</td>
                                    </tr>

                                    <tr class="sku-parameters">
                                        <td>Массовая доля жира (%):</td>
                                        <td>15</td>
                                    </tr>

                                    <tr class="sku-parameters">
                                        <td>Энергетическая ценность (Кдж/ккал):</td>
                                        <td>858/205</td>
                                    </tr>

                                    <tr class="sku-parameters">
                                        <td>Штрихкод:</td>
                                        <td>4602358003472</td>
                                    </tr>

                                </tbody>
                            </table>
                        </article>
                    </div>
                    <div class="tile is-parent is-5">
                        <article class="tile is-child box has-background-white-bis has-shadow ">
                            <table class="table is-striped">
                                <tbody>
                                <thead>
                                <tr>
                                    <th class="sku-parameters-strong">Пищевая ценность</th>
                                    <th class="sku-parameters-strong"></th>
                                </tr>
                                </thead>
                                <tr class="sku-parameters">
                                    <td>Жиры (г):</td>
                                    <td>15</td>
                                </tr>
                                <tr class="sku-parameters">
                                    <td><span class="shift">(в том числе в молочной основе):</span></td>
                                    <td>15</td>
                                </tr>

                                <tr class="sku-parameters">
                                    <td>Углеводы (г):</td>
                                    <td>17</td>
                                </tr>

                                <tr class="sku-parameters">
                                    <td><span class="shift">(в том числе сахарозы):</span></td>
                                    <td>14</td>
                                </tr>

                                <tr class="sku-parameters">
                                    <td>Белки (г):</td>
                                    <td>4,5</td>
                                </tr>

                                </tbody>
                            </table>
                        </article>
                    </div>
                </div>
            </div>

        </div>
        <aside class="column is-2-fullhd is-1-widescreen has-background-white-bis"></aside>
    </section>

{% endblock %}

{% block javascripts %}
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
{% endblock %}